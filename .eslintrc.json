{
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:prettier/recommended",
    "plugin:redos/recommended",
    "plugin:typescript-sort-keys/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["prettier", "@typescript-eslint", "typescript-sort-keys"],
  "rules": {
    "@typescript-eslint/array-type": [
      "warn",
      {
        "default": "array",
        "readonly": "array"
      }
    ],
    "@typescript-eslint/brace-style": "warn",
    "@typescript-eslint/camelcase": "off",
    "@typescript-eslint/consistent-type-definitions": ["warn", "interface"],
    "@typescript-eslint/dot-notation": "warn",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/func-call-spacing": "warn",
    "@typescript-eslint/interface-name-prefix": "off",
    "@typescript-eslint/member-ordering": "off",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "format": null,
        "modifiers": ["requiresQuotes"],
        "selector": ["objectLiteralProperty", "typeProperty"]
      },
      {
        "filter": "^(_info|_error|_style|_warning)",
        "format": null,
        "selector": ["objectLiteralProperty", "typeProperty"]
      },
      {
        "format": ["camelCase", "PascalCase", "snake_case"],
        "selector": ["objectLiteralProperty", "typeProperty"]
      },
      {
        "filter": "^(__brand)",
        "format": null,
        "selector": ["typeProperty"]
      },
      {
        "format": ["camelCase", "PascalCase", "snake_case"],
        "modifiers": ["destructured"],
        "selector": ["variable"]
      },
      {
        "format": ["camelCase", "PascalCase", "snake_case", "UPPER_CASE"],
        "selector": ["variable"]
      },
      {
        "format": null,
        "modifiers": ["unused"],
        "selector": "parameter"
      },
      {
        "format": ["PascalCase"],
        "selector": "typeLike"
      },
      {
        "format": ["camelCase"],
        "selector": "default"
      }
    ],
    "@typescript-eslint/no-empty-function": "warn",
    "@typescript-eslint/no-empty-interface": "warn",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-extra-parens": "off",
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/no-magic-numbers": [
      "warn",
      {
        "enforceConst": true,
        "ignore": [
          -1, 0, 1, 2, 3, 4, 5, 8, 10, 16, 100, 128, 200, 201, 204, 256, 301, 302, 400, 404, 500,
          1000, 3000
        ],
        "ignoreEnums": true,
        "ignoreNumericLiteralTypes": true,
        "ignoreReadonlyClassProperties": true
      }
    ],
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-unsafe-assignment": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_([a-z_]+)?$",
        "varsIgnorePattern": "^_([a-z_]+)?$"
      }
    ],
    "@typescript-eslint/no-use-before-define": "off",
    "@typescript-eslint/no-var-requires": 0,
    "@typescript-eslint/quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "@typescript-eslint/restrict-plus-operands": "warn",
    "@typescript-eslint/unified-signatures": "warn",
    "brace-style": "off",
    "camelcase": "off",
    "dot-notation": "off",
    "func-call-spacing": "off",
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "max-len": [
      "warn",
      {
        "code": 100,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true,
        "tabWidth": 2
      }
    ],
    "no-console": 0,
    "no-extra-parens": "off",
    "no-magic-numbers": "off",
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true
      }
    ],
    "quotes": "off",
    "semi": ["error", "always"],
    "sort-keys": [
      "warn",
      "asc",
      {
        "natural": true
      }
    ],
    "sort-vars": "warn",
    "valid-jsdoc": "off"
  }
}
